{
  "manifest_version": 3,
  "name": "StayLane",
  "version": "1.0.0",
  "description": "垂直tabs和窗口管理工具",
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "tabGroups",
    "sidePanel",
    "sessions"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "toggle-side-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+X"
      },
      "description": "打开/关闭侧边栏"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

